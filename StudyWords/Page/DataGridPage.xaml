<Page x:Class="StudyWords.Page.DataGridPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudyWords.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataGridPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="datagrid" Grid.Row="1" CanUserAddRows="True" CanUserDeleteRows="True" CanUserReorderColumns="True" CanUserSortColumns="True" IsReadOnly="True" />
        <DockPanel Grid.Row="0">
            <Button Name="btnRemove" Content="Remove" Width="400" Click="btnRemove_Click"/>
            <Button Name="btnUpdate" Content="Update" Click="btnUpdate_Click" />
        </DockPanel>

    </Grid>
</Page>
