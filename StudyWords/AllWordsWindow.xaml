<Window x:Class="StudyWords.AllWordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyWords"
        mc:Ignorable="d"
        Title="AllWordsWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock x:Name="txtShow"  Width="500" Height="100"/>
            <Button Content="Know" Name="btnKnow" Click="btnKnow_Click" />
            <Button Content="Dont know" Name="btnDontKnow" Click="btnDontKnow_Click" />
        </StackPanel>
    </Grid>
</Window>
