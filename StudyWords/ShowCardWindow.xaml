<Window x:Class="StudyWords.ShowCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyWords"
        mc:Ignorable="d"
        Title="ShowCardWindow" Height="450" Width="800" Background="Wheat">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="246*"/>
            <ColumnDefinition Width="547*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="0,0,1.4,0">
            <StackPanel>
                <TextBlock Text="Select group word" FontSize="30" />
                <ComboBox  Name="cbGroups" FontSize="30" />
                <Button x:Name="btnSearch" Content="Go" Height="40" Click="btnSearch_Click" FontSize="30" Margin="0 30 0 0"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Background="White">
            <DataGrid x:Name="datagrid" />
        </Grid>
    </Grid>
</Window>
